<view class="page">

    <view class="page__bd">
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input  confirm-type="search"  bindconfirm="bindconfirm" type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
                </label>
            </view>
            <!-- <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消 -->
             <view class="weui-search-bar__cancel-btn"  bindtap="goSearch">确定</view>
        </view>
        <view style="display:flex;justify-content:space-between;padding:1rem;">
              <view style="color:#6666; display:flex;align-items:center;">
              <view style="text-align: center; width:1rem;height:1rem; line-height:1rem;"><image  style="width:0.7rem;height:0.7rem;display: inline-block;" src="../../assets/images/record-icon.png" /></view>
              <view style="font-size:0.8rem;">最近搜索</view>
              </view>
              <view><image style="width:1rem;height:1rem;" src="../../assets/images/delete-icon.png" /></view>
        </view>

        <view style="display:flex;justify-content:space-between;padding-left:1rem;font-size:0.65rem;margin-bottom:0.5rem;">
              <view style="display:flex;height:1.5rem;">
                 <navigator url="../search_list/index">
                <view style="background:#6666;border:0.1rem solid #666;padding:0.5rem;margin-right:0.5rem;line-height:0.3rem;text-align:center;border-radius:0.5rem;-webkit-border-radius:0.5rem;">{{text}}
                </view>
                </navigator>
                 <view style="background:#6666;border:0.1rem solid #666;padding:0.5rem;margin-right:0.5rem;line-height:0.3rem;text-align:center;border-radius:0.5rem;-webkit-border-radius:0.5rem;">土狗广东幼崽</view>
